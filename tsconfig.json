{
	"compilerOptions": {
		"target": "es2022",
		"module": "commonjs",
		"resolveJsonModule": true,
		"allowJs": true,
		"outDir": "./dist",
		"removeComments": true,
		"esModuleInterop": true,
		"forceConsistentCasingInFileNames": true,
		"strict": true,
		"skipLibCheck": true,
		"experimentalDecorators": true,
		"emitDecoratorMetadata": true,
		"types": [
			"@acode-app/types"
		],
		"paths": {
			"acode/*": [
				"./node_modules/@acode-app/types/src/*"
			]
		}
	},
	"exclude": [
		"./dist/**/*",
		"./backup/**/*",
		"./tests/**/*"
	]
}